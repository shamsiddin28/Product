@using Product.Service.ViewModels.ProductViewModels;
@model ProductViewModel
@{
    ViewData["Title"] = "Remove";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<form asp-action="Remove" method="post">
    <div>
        <h4>Product</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @if (!string.IsNullOrEmpty(Model.Name))
                {
                    @Html.DisplayFor(model => model.Name)
                }
                else
                {
                    <span style="color: red;">Name has no value !</span>
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    @Html.DisplayFor(model => model.Description)
                }
                else
                {
                    <span style="color: red;">Description has no value !</span>
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SortNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SortNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.VideoData)
            </dt>
            <dd class="col-sm-10">
                <video controls width="320" height="180">
                    <source src="~/StaticFilesProducts/@Model.VideoData" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UpdatedAt)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UpdatedAt)
            </dd>
            
        </dl>
        <button type="submit" class="btn btn-danger">Remove</button>
        <a class="btn btn-primary" href="/Products/Index" role="button">Back to list</a>
    </div>
</form> 